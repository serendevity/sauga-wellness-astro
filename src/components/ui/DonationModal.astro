---
import Button from '~/components/ui/Button.astro';
---

<div id="donation-modal" class="modal-overlay hidden">
  <div class="modal-content">
    <div class="modal-body">
      <div class="donation-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
      </div>
      
      <p class="donation-message">
        Thank you for being part of our mission!</p>
      
      <div class="donation-instructions">
        <div class="email-container">
          <code id="donation-email">donate@saugawellness.com</code>
          <button id="copy-email" class="copy-button" title="Copy email address">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        </div>
        
        <p class="instructions-text">Send your donation amount to the email above using your bank's Interac e-Transfer feature.</p>
      </div>
      
      <div class="community-impact">
        <p>Your generous donation will go a long way in supporting wellness programs and health initiatives. Every contribution helps us make a meaningful difference in someone's life.</p>
      </div>
    </div>
    
    <div class="modal-footer">
      <Button id="close-modal-footer" variant="primary" type="button">Close</Button>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    backdrop-filter: blur(4px);
    opacity: 1;
    transition: opacity 0.5s ease-out;
  }
  
  .modal-overlay.hidden {
    opacity: 0;
    pointer-events: none;
  }
  
  .modal-overlay.closing {
    opacity: 0;
  }
  
  .modal-content {
    background: white;
    border-radius: 12px;
    max-width: 450px;
    width: 90%;
    max-height: 85vh;
    overflow-y: auto;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(0) scale(1);
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  .modal-overlay.hidden .modal-content {
    transform: translateY(-30px) scale(0.9);
  }
  
  .modal-overlay.closing .modal-content {
    transform: translateY(20px) scale(0.95);
  }
  
  .donation-icon svg {
    animation: heartPulse 2s ease-in-out infinite;
  }
  
  @keyframes heartPulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
  
  .email-container {
    animation: slideInUp 0.8s ease-out 0.3s both;
  }
  
  .instructions-text {
    animation: slideInUp 0.8s ease-out 0.5s both;
  }
  
  .community-impact {
    animation: slideInUp 0.8s ease-out 0.7s both;
  }
  
  .modal-footer {
    animation: slideInUp 0.8s ease-out 0.9s both;
  }
  
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .modal-body {
    padding: 1.25rem;
  }
  
  .donation-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 0.75rem;
    color: #4f9f93;
  }
  
  .donation-message {
    text-align: center;
    font-size: 1rem;
    color: #374151;
    margin-bottom: 1rem;
    line-height: 1.5;
  }
  .instructions-text {
    color: #d1d5db;
    font-size: 0.95rem;
    font-weight: 500;
    line-height: 1.5;
    margin-top: 0.75rem;
    margin-bottom: 0;
  }
  
  .email-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.75rem 0;
    padding: 0.6rem;
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 6px;
  }
  
  #donation-email {
    font-family: 'Courier New', monospace;
    font-size: 1rem;
    color: #4f9f93;
    font-weight: 600;
    flex: 1;
    background: none;
    border: none;
    padding: 0;
  }
  
  .copy-button {
    background: #4f9f93;
    color: white;
    border: none;
    padding: 0.5rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .copy-button:hover {
    background: #3d7a70;
  }
  
  .community-impact {
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 6px;
    padding: 0.75rem;
    margin-top: 1rem;
  }
  
  .community-impact p {
    margin: 0;
    color: #6b7280;
    font-size: 0.85rem;
    line-height: 1.4;
  }
  
  .modal-footer {
    padding: 0.75rem 1.25rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: flex-end;
  }
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .modal-content {
      background: #1f2937;
      color: #f9fafb;
    }
    .donation-message {
      color: #d1d5db;
    }
    

    
    .email-container {
      background-color: #374151;
      border-color: #4b5563;
    }
    
    .community-impact {
      background-color: #374151;
      border-color: #4b5563;
    }
    
    .community-impact p {
      color: #9ca3af;
    }
    
    .modal-footer {
      border-top-color: #374151;
    }
  }
</style>

<script>
  // Modal functionality
  function initDonationModal() {
    const modal = document.getElementById('donation-modal');
    const closeButtons = document.querySelectorAll('#close-modal-footer');
    const copyButton = document.getElementById('copy-email');
    const emailElement = document.getElementById('donation-email');
    
    // Close modal function
    function closeModal() {
      modal?.classList.add('closing');
      setTimeout(() => {
        modal?.classList.remove('closing');
        modal?.classList.add('hidden');
        document.body.style.overflow = '';
        document.body.style.paddingRight = '';
      }, 500);
    }
    
    // Open modal function
    function openModal() {
      // Calculate scrollbar width to prevent page jump
      const scrollbarWidth = window.innerWidth - document.documentElement.clientWidth;
      
      modal?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      document.body.style.paddingRight = `${scrollbarWidth}px`;
    }
    
    // Close modal on button click
    closeButtons.forEach(button => {
      button?.addEventListener('click', closeModal);
    });
    
    // Close modal on overlay click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
    
    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
        closeModal();
      }
    });
    
    // Copy email functionality
    copyButton?.addEventListener('click', async () => {
      const email = emailElement?.textContent || 'donate@saugawellness.com';
      
      try {
        await navigator.clipboard.writeText(email);
        
        // Visual feedback
        const originalText = copyButton.innerHTML;
        copyButton.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20,6 9,17 4,12"></polyline>
          </svg>
        `;
        copyButton.title = 'Copied!';
        
        setTimeout(() => {
          copyButton.innerHTML = originalText;
          copyButton.title = 'Copy email address';
        }, 2000);
        
      } catch (err) {
        console.error('Failed to copy email:', err);
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = email;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
      }
    });
    
    // Expose openModal function globally for navigation
    (window as any).openDonationModal = openModal;
  }
  
  // Initialize when DOM is loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initDonationModal);
  } else {
    initDonationModal();
  }
</script>
