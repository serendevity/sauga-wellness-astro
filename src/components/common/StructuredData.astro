---
export interface Props {
  type?: 'Organization' | 'LocalBusiness' | 'NonProfit';
  name?: string;
  description?: string;
  url?: string;
  logo?: string;
  address?: {
    streetAddress?: string;
    addressLocality?: string;
    addressRegion?: string;
    postalCode?: string;
    addressCountry?: string;
  };
  contactPoint?: {
    telephone?: string;
    email?: string;
    contactType?: string;
  };
  sameAs?: string[];
}

const {
  type = 'NonProfit',
  name = 'Sauga Wellness Foundation',
  description = 'Sauga Wellness Foundation is a not-for-profit organization dedicated to fostering resilient and healthy communities through culturally tailored health programs, newcomer wellness integration, and community health services.',
  url = 'https://saugawellness.com',
  logo = 'https://saugawellness.com/assets/images/logo.png',
  address = {
    addressLocality: 'Mississauga',
    addressRegion: 'Ontario',
    addressCountry: 'Canada'
  },
  contactPoint = {
    telephone: '+1-289-643-8287',
    email: 'contact@saugawellness.com',
    contactType: 'customer service'
  },
  sameAs = []
} = Astro.props;

const structuredData = {
  '@context': 'https://schema.org',
  '@type': type,
  name,
  description,
  url,
  logo: {
    '@type': 'ImageObject',
    url: logo
  },
  address: {
    '@type': 'PostalAddress',
    ...address
  },
  contactPoint: {
    '@type': 'ContactPoint',
    ...contactPoint
  },
  ...(sameAs.length > 0 && { sameAs }),
  ...(type === 'NonProfit' && {
    nonprofitStatus: 'NonprofitType',
    mission: 'To enhance awareness and accessibility to healthcare resources by actively engaging marginalized, racialized communities and newcomers.'
  })
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
