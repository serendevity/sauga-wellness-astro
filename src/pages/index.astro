---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';

import { YouTube } from 'astro-embed';
import { getPermalink } from '~/utils/permalinks';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Sauga Wellness Foundation',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Live life to the fullest"
    actions={[
      {
        variant: 'primary',
        text: 'Get Involved',
        href: getPermalink('/pricing'),
      },
    ]}
  >
    <Fragment slot="title">
      Awareness &#183; <span class="text-accent dark:text-white highlight">Advocacy</span> &#183; Accessibilty
    </Fragment>

    <Fragment slot="subtitle">
      Our vision is to enhance awareness and accessibilty to healthcare resources by actively engaging marginalized,
      racialized communities and newcomers in their native languages.
    </Fragment>

    <Fragment slot="image">
      <YouTube id="ZmuER7WHKrY" title="Discover Sauga Wellness" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    id="about-us"
    title="About us"
    subtitle="Sauga Wellness Foundation is a not-for-profit organization dedicated to fostering resilient and healthy communities. We are a team of passionate health and wellness advocates committed to improving the lives of those we serve. Our mission is to share our expertise and experiences to enhance the health, wellness and overall quality of life for our community."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="Our Services"
    items={[
      {
        title: 'Individual Services',
        description:
          "A dedicated mentor will personalized one-on-one coaching by finding the food and lifestyle that works best for you. We'll provide you wit health care resources that will help you navigate the wellness path that works best for you. Our emphasis is on self love and self care. If you take care of yourself, you will be in a much better position to take care of your loved ones.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Family Services',
        description:
          'Work as a team. Get your family involved into a better lifestyle that keep you and your loving circle happy and healthy. Instead of conflicts and arguments, strive for laughter, compassion and understanding. We offer all kinds of supports and programs that empower you to take charge of your physical, emontional and mental health',
        icon: 'flat-color-icons:conference-call',
      },
      {
        title: 'Newcomer Services',
        description:
          'We offer settlements services to all students, immigrants, refugees and naturalized Canadians. We offer information, resources and guidance in all languages including, Dari, Pashto, Urdu, Hindi, Arabic, Punjabi & Bengali. Our programs are inclusive & welcome people from all faiths, gender,ethnicity & sexual orientation',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features3 Widget ************** -->

  <Features
    title="Let us know how we can help"
    subtitle="We're here to help and answer any question you might have."
    columns={2}
    items={[
      {
        title: 'Phone: +1-416-651-0420',
        icon: 'tabler:phone',
      },
      {
        title: 'Email: info@saugawellness.com',
        icon: 'tabler:mail',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Get involved',
        href: getPermalink('/pricing'),
      },
    ]}
  >
    <Fragment slot="title">Be a part of our vision</Fragment>

    <Fragment slot="subtitle">
      Become part of vibrant, purpose driven team where you will find exciting opportunities to make a real, lasting
      impact on the community. Together we can shape healthier, more resilient lives.
    </Fragment>
  </CallToAction>
</Layout>
