---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Sauga Wellness Foundation',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sauga Wellness Foundation"
    actions={[
      {
        variant: 'primary',
        text: 'Get Involved',
        href: getPermalink('/pricing'),
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Awareness &#183; <span class="text-accent dark:text-white highlight">Advocacy</span> &#183; Accessibilty
    </Fragment>

    <Fragment slot="subtitle">
      Our vision is to increase awareness and accessibilty to existing healthcare resources by proactively engaging
      marginalized and racialized communities and newcomers in their own languages.
    </Fragment>

    <Fragment slot="image">
      <YouTube id="ZmuER7WHKrY" title="Discover Sauga Wellness" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    id="about-us"
    title="About us"
    subtitle="Sauga Wellness Foundation is a not for profit organization. We are committed to building resilient and healthy communities. We are a group of health and wellness advocates and activists dedicated to improving the lives of the people we serve. Our mission is to share our knowledge and experiences with our community to improve your health and wellness, & overall quality of life."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Discover the impressive impact"
    subtitle="The numbers below reflect the trust our community has placed in us and the remarkable outcomes we've helped them achieve."
    stats={[
      { title: 'Arrivals', amount: '82K' },
      { title: 'Coach', amount: '87' },
      { title: 'User Ratings', amount: '4.8' },
      { title: 'Satisfied Clients', amount: '116K' },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title="Partnerships & Collaborations"
    subtitle="At Astrowind, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
      },

      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
        alt: 'Meta',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="Our Services"
    items={[
      {
        title: 'Individual Services',
        description:
          "A dedicated mentor will personalized one-on-one coaching by finding the food and lifestyle that works best for you. We'll provide you wit health care resources that will help you navigate the wellness path that works best for you. Our emphasis is on self love and self care. If you take care of yourself, you will be in a much better position to take care of your loved ones.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Family Services',
        description:
          'Work as a team. Get your family involved into a better lifestyle that keep you and your loving circle happy and healthy. Instead of conflicts and arguments, strive for laughter, compassion and understanding. We offer all kinds of supports and programs that empower you to take charge of your physical, emontional and mental health',
        icon: 'flat-color-icons:conference-call',
      },
      {
        title: 'Newcomer Services',
        description:
          'We offer settlements services to all students, immigrants, refugees and naturalized Canadians. We offer information, resources and guidance in all languages including, Dari, Pashto, Urdu, Hindi, Arabic, Punjabi & Bengali. Our programs are inclusive & welcome people from all faiths, gender,ethnicity & sexual orientation',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Let us know how we can help"
    subtitle="Weâ€™re here to help and answer any question you might have."
    columns={4}
    items={[
      {
        title: 'Phone',
        icon: 'tabler:phone',
        callToAction: {
          target: '_blank',
          text: 'Call us',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: {
          target: '_blank',
          text: 'Write to us',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Chat with sales',
        icon: 'tabler:message-circle',
        callToAction: {
          target: '_blank',
          text: 'Start chatting',
          href: '/',
          variant: 'link',
        },
      },
      {
        title: 'Chat with support',
        icon: 'tabler:message-circle',
        callToAction: {
          target: '_blank',
          text: 'Start chatting',
          href: '/',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Get involved',
        href: getPermalink('/pricing'),
        icon: 'tabler:hand-stop',
      },
    ]}
  >
    <Fragment slot="title">Be a part of our vision</Fragment>

    <Fragment slot="subtitle">
      Discover a dynamic work environment, unparalleled growth opportunities, and the chance to make a meaningful
      impact.
    </Fragment>
  </CallToAction>
</Layout>
